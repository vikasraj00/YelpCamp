<% include ../partials/header %>

<div class="container">
    <div class="row">

        <div class="col-md-3 mt-5 ">
            <div class="list-group">
                <li class="list-group-item active"> Info 1 </li>
                <li class="list-group-item"> Info 2 </li>
                <li class="list-group-item"> Info 3 </li>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card mb-3 mt-5">
                <img class="card-img" src="<%= campground.image %>" alt="Campground Image">
                <div class="card-body">
                    <h4 class="float-right"> $9.00/Night </h4>
                    <h4 class="card-title"> <a href="#"> <%= campground.name %> </a> </h4>
                    <p class="card-text"> <%= campground.description %> </p>
                </div>
            </div>

            <div class="card bg-light mb-3">
                    <div class="card-body">
                        <div class="card-header text-right">
                            <a class="btn btn-success" href="/campgrounds/<%= campground.id %>/comments/new"> Add New Comment </a>
                        </div>
                        <% campground.comments.forEach(function(comment){ %>
                            <div class="row">
                                <div class="col-md-12">
                                    <strong> <%= comment.author %> </strong>
                                    <p class="card-text float-right">
                                        <small class="text-muted"> 10 Days Ago </small>
                                    </p>
                                    <p class="card-text">
                                        <%= comment.text %> 
                                    </p>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            
        </div>
    </div>
</div>


<% include ../partials/footer %>