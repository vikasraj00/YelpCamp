<% include ../partials/header %>

<h1 style="text-align: center;"> <span class="d-md-inline"> Add Comment </span> <span class="d-none d-md-inline"> to <%= campground.name %> </span>  </h1>
<div class="container">
    <div class="row">
        <div  class="col-md-4 mx-auto mt-3">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST"> 
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" placeholder="Write your comment here" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block"> Submit </button>
                </div>
            </form>
            <a href="/campgrounds"> Go Home </a>
        </div>
    </div>
</div>   

<% include ../partials/footer %>