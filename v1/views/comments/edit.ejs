<% include ../partials/header %>

<h1 style="text-align: center;"> Edit Comment </h1>
<div class="container">
    <div class="row">
        <div  class="col-md-4 mx-auto mt-3">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" placeholder="Write your comment here" rows="5"> <%= comment.text %> </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block"> Submit </button>
                </div>
            </form>
            <a href="/campgrounds"> Go Home </a>
        </div>
    </div>
</div>   





<% include ../partials/footer %>